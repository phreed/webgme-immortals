[Unit]
Description=WebGME Immortals Service"
Documentation=https://webgme.org
Requires=mongodb.service

[Service]
Type=simple
# Restart=always
# StandardInput=
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=webgme
SyslogLevel=debug
User=brass
# Group=nobody
Environment="NODE_ENV=immortals" 
Environment="GME_DIR=projects/brass/webgme-immortals"
WorkingDirectory=/isis/home/brass/projects/brass/webgme-immortals
# ExecStartPre=/usr/bin/env
ExecStart=/isis/home/brass/.nvm/versions/node/v6.9.2/bin/node ./dist-client/main/app_bootstrap.js


