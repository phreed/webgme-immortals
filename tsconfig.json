{
  "atom": {
    "rewriteTsconfig": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "compilerOptions": {
    "outDir": "./gen",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "amd",
    "moduleResolution": "node",
    "removeComments": false,
    "target": "es3",
    "watch": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "."
  },
  "filesGlob": [
    "./typings/index.d.ts",
    "./src-ts/**/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*.ts",
    "./**/*.spec.ts"
  ],
  "files": [
    "./typings/index.d.ts",
    "./src-ts/plugins/PushPlugin/PushPlugin.ts",
    "./src-ts/plugins/PushPlugin/text.d.ts",
    "./src-ts/plugins/StreamingPlugin/StreamingPlugin.ts",
    "./src-ts/serializer/NewSerializer.ts",
    "./src/serialize/CyjsSerializer.d.ts",
    "./src/serialize/FlatSerializer.d.ts"
  ]
}
