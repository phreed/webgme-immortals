{
  "atom": {
    "formatOnSave": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "webgme"
    ],
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "module": "amd",
    "moduleResolution": "node",
    "removeComments": false,
    "target": "es6",
    "watch": false,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "rootDirs": [
      "./src/ts",
      "./src/js",
      "./dist"
    ],
    "paths": {
      "*": [
        "*",
        "./src/js/*",
        "./src/ts/*",
        "./dist/*"
      ]
    }
  },
  "files": [
    "./src/ts/app_bootstrap.ts"
  ],
  "include": [
    "./src/ts/**/*.ts"
  ],
  "exclude": [
    "./src/ts/plugins/FilingPlugin/FilingPlugin.ts",
    "./src/ts/serializer/delivery.ts",
    "node_modules",
    "bower_components",
    "jspm_packages",
    "**/*.spec.ts",
    ".vscode"
  ]
}