{
  "atom": {
    "formatOnSave": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "compilerOptions": {
    "outDir": "./gen",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "module": "amd",
    "moduleResolution": "node",
    "removeComments": false,
    "target": "es6",
    "watch": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "rootDirs": [
      "./src/ts",
      "./src/js",
      "./gen"
    ],
    "paths": {
      "*": [
        "*",
        "./src/js/*",
        "./src/ts/*",
        "./gen/*"
      ]
    }
  },
  "include": [
    "./src/ts/**/*.ts",
    "./typings/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages",
    "**/*.spec.ts"
  ]
}
